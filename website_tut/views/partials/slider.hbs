<div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-indicators">
{{#each slides}}

    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{@index}}" class="{{this.class}}" aria-current="true" aria-label="Slide 1"></button>
    {{/each}}
    </div>

  <div class="carousel-inner">

    {{#each slides}}
    <div class="carousel-item {{this.class}}">
      <img src="{{this.imgUrl}}" class="d-block w-100 slider-img" alt="slide {{@index}}">
          <div class="carousel-caption d-none d-md-block text-white">
        <h2>{{this.title}}</h2>
        <p>{{this.subTitle}}</p>
      </div>
    </div>

    {{/each}}

     </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>